@model IEnumerable<proyecto_iic2113.Models.Notifications>

@{
    ViewData["Title"] = "Notifications";
}

<h1>Notifications</h1>
<hr />

<div class="container">

    @if (ViewBag.userId == null)
    {
        <br />
        <h3 class="text-center"> You must registrate to get notifications! </h3>
    }

    @foreach (var item in Model)
    {

        <div class="card bg-light mb-3" style="max-width: 70rem;">
            <div class="card-header text-center">
                <div class="row justify-content-around">
                    <div> <a> @Html.DisplayFor(modelItem => item.Date) </a> </div>
                    <div> <a> <i class="fas fa-user-friends"> </i> : @Html.DisplayFor(modelItem => item.Conference.Name) </a></div>
                    @if (item.Event != null)
                    {
                        <div><a><i class="fas fa-calendar-week"></i> : @Html.DisplayFor(modelItem => item.Event.Name)</a></div>
                    }
                    <div><a asp-action="DeleteNotification" asp-route-id="@item.Id"><i class="fas fa-trash fa-lg"></i></a> </div>
                </div>
            </div>
            <div class="card-body">
                <p class="card-text">@Html.DisplayFor(modelItem => item.Body)</p>
            </div>
        </div>
    }
</div> 
