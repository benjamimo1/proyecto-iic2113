            </div>
            <div class="form-group">
                <input type="hidden" asp-for="EventId" value=@ViewBag.EventId>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

