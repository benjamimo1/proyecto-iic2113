@model proyecto_iic2113.Models.Notifications

@{
    ViewData["Title"] = "CreateNotification";
}

<h1>CreateNotification</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Event" asp-action="CreateNotification">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Body" class="control-label"></label>
                <input asp-for="Body" class="form-control" />
