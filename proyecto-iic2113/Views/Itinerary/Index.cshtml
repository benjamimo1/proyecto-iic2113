@model Tuple<AttendanceView, AttendanceViewEvent>
@{
    ViewData["Title"] = "Index";
}


<h3 class="text-muted">Conferences Itinerary</h3>
@if (ViewBag.Conferences.Count == 0) {
    <li class="list-group-item">
        <p class="text-center text-info">There are no conferences yet ðŸ˜”</p>
    </li>
}
@foreach (var conference in ViewBag.conferences)
            {
                
                <li class="list-group-item">
                    <a asp-action="Details" asp-controller="Conference" asp-route-id="@conference.ConferenceId">@conference.Name</a>
                    <a>- @conference.Venue - @conference.DateTime - @conference.EndDate</a>
                </li>

            }


