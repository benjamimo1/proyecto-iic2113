@model IEnumerable<proyecto_iic2113.Models.Conference>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Conferences</h1>

<div class="container">

    <a asp-action="Create" class="btn btn-outline-primary">Create new</a>

    @foreach (var item in Model)
    {
        <div class="card border-dark my-3">
            <div class="card-header text-white bg-success">
                <div class="row justify-content-around">
                    <div> <a> @Html.DisplayFor(modelItem => item.DateTime) </a> </div>
                    <div><a> Conference </a></div>
                    <div> <a> @Html.DisplayFor(modelItem => item.Venue.Name) </a> </div>
                </div>
            </div>

            <div class="card-body text-dark">
                <div class="row justify-content-center">
                    <h3 class="card-title">
                        <a asp-action="Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                        
                    </h3>
                </div>
                <blockquote class="blockquote mb-0">
                    <div class="row justify-content-center">
                        <p> @Html.DisplayFor(modelItem => item.Description) </p>
                    </div>
                </blockquote>
                <div class="container">
                    <div class="row justify-content-around">
                        @if (User.Identity.IsAuthenticated && ViewBag.UserId == item.Organizer.Id)
                        {
                            <div>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                            </div>
                            <div>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info">Delete</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <br />
    }
</div>


