@model IEnumerable<proyecto_iic2113.Models.Conference>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Conferences</h1>

<br />

<p>
    <a asp-action="Create">Create New</a>
</p>

@foreach (var item in Model)
{
    <div class="card">
        <div class="card-header">
            <div class="row justify-content-between">
                <div> <a> @Html.DisplayFor(modelItem => item.DateTime) </a> </div>
                <div><a> Conference </a></div>
                <div> <a> @Html.DisplayFor(modelItem => item.Venue.Name) </a> </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row justify-content-center">
                <h3 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h3>
            </div>
            <blockquote class="blockquote mb-0">
                <div class="row justify-content-center">
                   <p> @Html.DisplayFor(modelItem => item.Description) </p>
                </div>
            </blockquote>
            <div class="container">
                <div class="row justify-content-between">
                    <div>
                       <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </div>
                    <div>
                       <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </div>
                    <div>
                       <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />

 }






































