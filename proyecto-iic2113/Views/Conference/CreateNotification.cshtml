@model proyecto_iic2113.Models.Notifications

@{
    ViewData["Title"] = "Notification";
}

<h1>Notifications</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Conference" asp-action="CreateNotification">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Body" class="control-label">Message</label>
                <input asp-for="Body" class="form-control" />
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ConferenceId" value=@ViewBag.ConferenceId>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@ViewBag.ConferenceId">Back to List</a>
</div>